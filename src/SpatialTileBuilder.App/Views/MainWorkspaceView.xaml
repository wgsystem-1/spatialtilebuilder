<UserControl x:Class="SpatialTileBuilder.App.Views.MainWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpatialTileBuilder.App.Views"
             xmlns:comp="clr-namespace:SpatialTileBuilder.App.Views.Components"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu -->
            <RowDefinition Height="*"/>    <!-- Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" IsMainMenu="True" Background="{DynamicResource MaterialDesignPaper}">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" />
                <MenuItem Header="_Open Project..." />
                <MenuItem Header="_Save Project" />
                <MenuItem Header="_Export..." Command="{Binding OpenExportCommand}" />
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Reset Layout" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" />
            </MenuItem>
        </Menu>

        <!-- Main Content Area (3 Panes) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="500"/>
                <ColumnDefinition Width="Auto"/> <!-- Splitter -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/> <!-- Splitter -->
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="500"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANE: Data & Layers -->
            <Grid Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/> <!-- Browser -->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/> <!-- Layers -->
                </Grid.RowDefinitions>
                
                <GroupBox Header="Data Sources" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="4">
                    <comp:SourceBrowserView DataContext="{Binding SourceBrowser}"/>
                </GroupBox>
                
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent"/>
                
                <GroupBox Grid.Row="2" Header="Layers" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="4,0,4,4">
                    <comp:LayerListView DataContext="{Binding LayerList}"/>
                </GroupBox>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- CENTER PANE: Map Canvas -->
            <Grid Grid.Column="2" Background="#202020" ClipToBounds="True">
                <comp:MapCanvasView DataContext="{Binding MapCanvas}"/>
            </Grid>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Center" Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- RIGHT PANE: Properties -->
            <Grid Grid.Column="4" Background="{DynamicResource MaterialDesignCardBackground}">
                <GroupBox Header="Properties" Style="{DynamicResource MaterialDesignCardGroupBox}" Margin="4,4,4,4">
                    <comp:LayerPropertiesView DataContext="{Binding LayerProperties}"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource MaterialDesignPaper}">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
            <Separator Style="{StaticResource MaterialDesignStatusBarSeparator}"/>
            <StatusBarItem>
                <TextBlock Text="127.0, 37.5"/>
            </StatusBarItem>
            <Separator Style="{StaticResource MaterialDesignStatusBarSeparator}"/>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="False" Width="20" Height="20"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Overlay for Export Dialog -->
        <Grid Grid.RowSpan="3" Visibility="{Binding IsExportVisible, Converter={StaticResource BooleanToVisibilityConverter}}" Background="#80000000" Panel.ZIndex="100">
             <comp:ExportView DataContext="{Binding ExportVM}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
