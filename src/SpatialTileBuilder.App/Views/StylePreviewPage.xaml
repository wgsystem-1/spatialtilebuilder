<Page x:Class="SpatialTileBuilder.App.Views.StylePreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="clr-namespace:SpatialTileBuilder.App.ViewModels"
      xmlns:converters="clr-namespace:SpatialTileBuilder.App.Converters"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1400"
      Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Layers -->
        <Border Grid.Column="0" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,1,0" Padding="0,0,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Layers" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16"/>

                <!-- Layer List -->
                <ListView Grid.Row="1" ItemsSource="{Binding ViewModel.Layers}" 
                         SelectedItem="{Binding ViewModel.SelectedLayer, Mode=TwoWay}"
                         SelectionMode="Single"
                         d:ItemsSource="{d:SampleData ItemCount=5}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <CheckBox IsChecked="{Binding IsVisible, Mode=TwoWay}" Margin="0,0,8,0" DockPanel.Dock="Left"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Layer Ordering -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8">
                    <Button Style="{DynamicResource MaterialDesignIconButton}" 
                            Command="{Binding ViewModel.MoveLayerUpCommand}" ToolTip="Move Up">
                        <materialDesign:PackIcon Kind="ArrowUp" />
                    </Button>
                    <Button Style="{DynamicResource MaterialDesignIconButton}" 
                            Command="{Binding ViewModel.MoveLayerDownCommand}" ToolTip="Move Down">
                        <materialDesign:PackIcon Kind="ArrowDown" />
                    </Button>
                </StackPanel>

                <!-- Layer Settings (Selected Layer) -->
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" MaxHeight="300" Margin="0,16,0,0"
                              Visibility="{Binding ViewModel.IsLayerSelected, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <!-- Fill Style -->
                        <Expander Header="Fill Sytle (면 스타일)" IsExpanded="True" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                            <StackPanel Margin="8">
                                <CheckBox IsChecked="{Binding ViewModel.SelectedLayer.IsFillVisible, Mode=TwoWay}" Content="Visible (표시)" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ViewModel.SelectedLayer.FillColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Fill Color (Hex)" VerticalAlignment="Center"/>
                                    <Border Background="{Binding ViewModel.SelectedLayer.FillColor}" Width="20" Height="20" Margin="8,0,0,0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1"/>
                                </Grid>
                                <TextBlock Text="Opacity (투명도)" FontSize="11" Margin="0,4,0,0"/>
                                <Slider Value="{Binding ViewModel.SelectedLayer.Opacity, Mode=TwoWay}" 
                                        Minimum="0" Maximum="1" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                            </StackPanel>
                        </Expander>

                        <!-- Stroke Style -->
                        <Expander Header="Line Style (선 스타일)" IsExpanded="False" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                            <StackPanel Margin="8">
                                 <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ViewModel.SelectedLayer.StrokeColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Line Color (Hex)" VerticalAlignment="Center"/>
                                    <Border Background="{Binding ViewModel.SelectedLayer.StrokeColor}" Width="20" Height="20" Margin="8,0,0,0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1"/>
                                </Grid>
                                <TextBox Text="{Binding ViewModel.SelectedLayer.StrokeWidth, Mode=TwoWay}"
                                         materialDesign:HintAssist.Hint="Width (두께)" Margin="0,0,0,8"/>
                                <ComboBox ItemsSource="{Binding ViewModel.SelectedLayer.DashStyles}" 
                                          SelectedItem="{Binding ViewModel.SelectedLayer.StrokeDashArray, Mode=TwoWay}"
                                          materialDesign:HintAssist.Hint="Dash Style (점선)"/>
                            </StackPanel>
                        </Expander>

                        <!-- Label Style -->
                        <Expander Header="Labeling (라벨)" IsExpanded="False" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                            <StackPanel Margin="8">
                                <ComboBox ItemsSource="{Binding ViewModel.SelectedLayer.Columns}" 
                                          SelectedItem="{Binding ViewModel.SelectedLayer.SelectedLabelColumn, Mode=TwoWay}"
                                          materialDesign:HintAssist.Hint="Label Column (컬럼 선택)"
                                          Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ViewModel.SelectedLayer.LabelSize, Mode=TwoWay}"
                                             materialDesign:HintAssist.Hint="Size (크기)" Margin="0,0,4,0"/>
                                    <TextBox Text="{Binding ViewModel.SelectedLayer.LabelColor, Mode=TwoWay}"
                                             materialDesign:HintAssist.Hint="Color (색상)" Grid.Column="1" Margin="4,0,0,0"/>
                                </Grid>
                                <TextBox Text="{Binding ViewModel.SelectedLayer.LabelHaloRadius, Mode=TwoWay}"
                                         materialDesign:HintAssist.Hint="Halo Radius (테두리 두께)"/>
                            </StackPanel>
                        </Expander>
                        
                         <!-- Point Style -->
                        <Expander Header="Point/Symbol (심볼)" IsExpanded="False">
                            <StackPanel Margin="8">
                                 <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding ViewModel.SelectedLayer.PointSize, Mode=TwoWay}"
                                             materialDesign:HintAssist.Hint="Size (크기)" Margin="0,0,4,0"/>
                                    <TextBox Text="{Binding ViewModel.SelectedLayer.PointColor, Mode=TwoWay}"
                                             materialDesign:HintAssist.Hint="Color (색상)" Grid.Column="1" Margin="4,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Right Panel: Map Preview -->
        <Grid Grid.Column="1" Margin="16,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Preview Toolbar -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <TextBlock Text="Map Preview" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" VerticalAlignment="Center" Margin="0,0,16,0"/>
                
                <ComboBox ItemsSource="{Binding ViewModel.ZoomLevels}" 
                          SelectedItem="{Binding ViewModel.SelectedZoom, Mode=TwoWay}"
                          materialDesign:HintAssist.Hint="Zoom Level"
                          Width="100" Margin="0,0,16,0"/>
                
                <Button Content="Refresh" Command="{Binding ViewModel.LoadStyleCommand}" 
                        Style="{DynamicResource MaterialDesignOutlinedButton}"/>
            </StackPanel>

            <!-- Map Image -->
            <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Background="#F0F0F0">
                <Grid>
                    <Image Source="{Binding ViewModel.PreviewImage}" Stretch="Uniform" />
                    <TextBlock Text="No Preview Available" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.PreviewImage}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Bottom Actions -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                 <!-- Status Message -->
                 <TextBlock Text="{Binding ViewModel.StatusMessage}" VerticalAlignment="Center" Foreground="Gray" TextTrimming="CharacterEllipsis" MaxWidth="400" HorizontalAlignment="Left"/>
                 
                 <!-- Next Button -->
                 <Button Content="Region Selection" Command="{Binding ViewModel.NavigateNextCommand}" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
         <Grid Grid.ColumnSpan="2" Background="#80FFFFFF" 
              Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" 
                         Width="50" Height="50"
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         Value="0" IsIndeterminate="True"/>
        </Grid>
    </Grid>
</Page>
